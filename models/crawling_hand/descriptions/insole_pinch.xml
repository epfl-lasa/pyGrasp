<mujoco model="insole">

    <option>
    <flag gravity="enable"/>
  </option>
    <asset>
        <texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2=".6 .8 1"
                 width="256" height="256"/>
        <texture name="sample_text" type="cube" builtin="flat" mark="cross" width="128" height="128"
                 rgb1="0.6 0.6 0.6" rgb2="0.6 0.6 0.6" markrgb="1 1 1" />
        <material name='red' texture="sample_text" texuniform="true" rgba="1.0 0 0 1"/>
        <material name="green" texture="sample_text" texuniform="true" rgba="0 1.0 0 1"/>
    </asset>
  <size njmax="8000" nconmax="4000"/>

    <worldbody>
        <light pos="0 1 1" dir="0 -1 -1" diffuse="1 1 1"/>
        <geom type="plane" size="1 1 0.1" rgba="0 0 1.0 0.2" friction="0.1 0.05 0.01"/>

        <!-- gripper-->
        <body>
            <joint name="jup" type="slide" axis="0 0 1" limited="true" range="0.008 8.5"/>
            <geom  type="capsule" fromto="0 0 1.6 0.3 0  1.6" size="0.04" mass="0.1"/>
<!--            <joint name="rot" axis="1 0 0" limited="true" range="-3.14 3.14"/>-->
    <!--        left finger-->
            <body pos="0 0.3 0.2" quat="1 0 0 0">
            <joint name="left_finger" type="slide" axis="0 1 0" limited="true" range="-0.3 0" damping="1"/>
<!--            solimp, solref:  Constraint solver parameters for contact simulation-->
            <geom name='left_red' type="box" material="red" size="0.1 0.07 0.01" mass="0.01"/>
<!--                  friction="1 0.05 0.01" solimp="1.1 1.2 0.001 0.5 2" solref="0.02 1"-->
            </body>
<!--            right finger-->
            <body pos="0 -0.3 0.2">
                <joint name="right_finger" type="slide" axis="0 1 0" limited="true" range="0 0.3" damping="1"/>
                <geom name='right_green' type="box" material="green" size="0.1 0.07 0.01" mass="0.01"/>
<!--                      friction="1 0.05 0.01" solimp="1.1 1.2 0.001 0.5 2" solref="0.02 1"-->
            </body>
        </body>

<!--        soft cylinder-->
        <body pos="0 0 0.3">
            <freejoint/>
<!--            <composite type="cylinder" count="2 2 2" spacing="0.05">-->
<!--&lt;!&ndash;                <skin texcoord="true" material="green" rgba=".7 .7 .7 1"/>&ndash;&gt;-->
<!--                <geom type="capsule" size=".015 0.05" rgba=".8 .2 .1 1" mass="0.001"-->
<!--                      friction="1 0.05 0.01"/>-->
<!--            </composite>-->
<!--             <joint type="free"/>-->
<!--            <geom name="cylinder" mass="0.01" pos="0 0 0" rgba="1 0 0 1" size="0.02 0.15" type="cylinder" condim="3"-->
<!--                 friction="0.5 0.35 0.01" solimp="1.1 1.2 0.001 0.5 2" solref="0.02 1"/>-->
            <geom name="box" mass="0.1" pos="0 0 0" rgba="1 0 0 1" size="0.02 0.02 0.2" type="box" condim="3"
                 friction="0.2 0.35 0.01" solimp="1.1 1.2 0.001 0.5 2" solref="0.02 1"/>
        </body>
    </worldbody>

    <equality>
        <joint name="left_box_right_box" joint1="left_finger" joint2="right_finger" polycoef="0 -1 0 0 0"/>
    </equality>

    <actuator>
        <motor name="gripper" gear="10" joint="left_finger" />
        <motor name="up_motor" gear="10" joint="jup" />
<!--        <position name="rot" joint="rot" ctrllimited="true" ctrlrange="-1.571 1.57" />-->
    </actuator>

</mujoco>

